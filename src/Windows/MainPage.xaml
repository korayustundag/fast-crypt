<Page
    x:Class="FastCrypt.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FastCrypt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <PasswordBox x:Name="txtPassword" Header="Password:" PlaceholderText="Passwod" Margin="10,10,10,0" VerticalAlignment="Top" FontSize="20" CornerRadius="5,5,5,5"/>
        <RichEditBox x:Name="txtData" Header="Text / Encrypted Text:" Margin="10,86,10,70" FontSize="18" ClipboardCopyFormat="PlainText" CornerRadius="5,5,5,5"/>
        <Button x:Name="btnEncrypt" Content="Encrypt" Margin="0,0,10,10" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Right" Width="139" Height="45" Click="btnEncrypt_Click" CornerRadius="5,5,5,5"/>
        <Button x:Name="btnDecrypt" Content="Decrypt" Margin="0,0,154,10" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Right" Width="139" Height="45" Click="btnDecrypt_Click" CornerRadius="5,5,5,5"/>
    </Grid>
</Page>
